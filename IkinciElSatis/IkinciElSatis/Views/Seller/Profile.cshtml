@model IkinciElSatis.ViewModels.SellerProfileViewModel
@using System.Security.Claims

@{
    ViewData["Title"] = Model.Seller.FirstName + " " + Model.Seller.LastName;
    var currentUserId = User.FindFirstValue(ClaimTypes.NameIdentifier);
}

<div class="container mt-4">
    <div class="card shadow-sm mb-4 border-0">
        <div class="card-body p-4">
            <div class="d-flex align-items-center flex-column flex-md-row gap-4">

                <div class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center fs-1 fw-bold shadow"
                     style="width: 100px; height: 100px;">
                    @Model.Seller.FirstName?.Substring(0, 1).ToUpper()@Model.Seller.LastName?.Substring(0, 1).ToUpper()
                </div>

                <div class="flex-grow-1 text-center text-md-start">
                    <h2 class="fw-bold mb-1">@Model.Seller.FirstName @Model.Seller.LastName</h2>
                    <p class="text-muted mb-2">@Model.Seller.Email</p>

                    <div class="d-flex gap-4 justify-content-center justify-content-md-start mb-3">
                        <div class="text-center">
                            <span class="fw-bold fs-5 d-block">@Model.Products.Count</span>
                            <small class="text-muted">İlan</small>
                        </div>
                        <div class="text-center">
                            <span class="fw-bold fs-5 d-block">@Model.FollowerCount</span>
                            <small class="text-muted">Takipçi</small>
                        </div>
                    </div>
                </div>

                <div class="d-flex flex-column gap-2" style="min-width: 200px;">
                    @if (currentUserId != Model.Seller.Id)
                    {
                        <form asp-action="ToggleFollow" method="post">
                            <input type="hidden" name="followeeId" value="@Model.Seller.Id" />
                            @if (Model.IsFollowing)
                            {
                                <button type="submit" class="btn btn-outline-secondary w-100 fw-bold">
                                    <i class="bi bi-person-check-fill"></i> Takip Ediliyor
                                </button>
                            }
                            else
                            {
                                <button type="submit" class="btn btn-primary w-100 fw-bold">
                                    <i class="bi bi-person-plus-fill"></i> Takip Et
                                </button>
                            }
                        </form>

                        <a asp-controller="Message" asp-action="Index"
                           asp-route-userId="@Model.Seller.Id"
                           class="btn btn-success w-100">
                            <i class="bi bi-chat-dots-fill"></i> Mesaj Gönder
                        </a>
                    }
                    else
                    {
                        <div class="alert alert-secondary text-center p-2 mb-0">Bu Sizin Profiliniz</div>
                    }
                </div>
            </div>
        </div>
    </div>

    <h4 class="mb-3"><i class="bi bi-grid-fill text-primary"></i> Mağazadaki Ürünler</h4>

    @if (!Model.Products.Any())
    {
        <div class="alert alert-info">Bu satıcının henüz yayında bir ilanı yok.</div>
    }
    else
    {
        <div class="row row-cols-2 row-cols-md-4 g-3">
            @foreach (var item in Model.Products)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div style="height: 180px; overflow: hidden; position: relative;">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id">
                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                {
                                    <img src="/products/@item.ImagePath" class="w-100 h-100" style="object-fit: cover;">
                                }
                                else
                                {
                                    <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-muted">
                                        <i class="bi bi-image fs-1"></i>
                                    </div>
                                }
                            </a>
                        </div>
                        <div class="card-body p-2">
                            <h6 class="card-title text-truncate mb-1">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.Id" class="text-dark text-decoration-none fw-bold">@item.Name</a>
                            </h6>
                            <div class="text-primary fw-bold">@item.Price.ToString("C0")</div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>