@model IkinciElSatis.ViewModels.UserProfileViewModel

@{
    ViewData["Title"] = "Profilim";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card shadow-sm">
                <div class="card-body text-center">
                    <div class="mb-3">
                        <i class="bi bi-person-circle display-1 text-primary"></i>
                    </div>

                    <h4 class="d-flex justify-content-center align-items-center gap-2">
                        @Model.FirstName @Model.LastName
                        <a asp-action="EditProfile" class="btn btn-sm btn-outline-primary rounded-circle" title="Profili Düzenle">
                            <i class="bi bi-pencil-fill"></i>
                        </a>
                    </h4>

                    <p class="text-muted">@Model.Email</p>
                    <hr />

                    <div class="text-start ps-3">
                        <p class="mb-1"><small class="text-muted">Doğum Tarihi:</small></p>
                        <p class="fw-bold">
                            @(Model.BirthDate.HasValue? Model.BirthDate.Value.ToString("dd.MM.yyyy") : "-")
                        </p>

                        <p class="mb-1"><small class="text-muted">Adres / İletişim:</small></p>
                        <p class="fw-bold">@Model.Address</p>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <form asp-action="Logout" method="post">
                            <button type="submit" class="btn btn-outline-secondary w-100">Çıkış Yap</button>
                        </form>

                        <form asp-action="DeleteAccount" method="post" onsubmit="return confirm('Hesabınızı silmek istediğinize emin misiniz? Bu işlem geri alınamaz ve tüm ilanlarınız silinir!');">
                            <button type="submit" class="btn btn-danger w-100">Hesabımı Sil</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-header bg-white d-flex justify-content-between align-items-center py-3">
                    <h5 class="mb-0 text-primary"><i class="bi bi-box-seam me-2"></i>Yayındaki İlanlarım</h5>
                    <a asp-controller="Product" asp-action="Create" class="btn btn-sm btn-success">+ Yeni İlan</a>
                </div>
                <div class="card-body p-0">
                    @if (!Model.UserProducts.Any())
                    {
                        <div class="text-center p-5 text-muted">
                            <p>Henüz hiç ilan vermemişsiniz.</p>
                            <a asp-controller="Product" asp-action="Create" class="btn btn-primary">Hemen Satışa Başla</a>
                        </div>
                    }
                    else
                    {
                        <div class="table-responsive">
                            <table class="table table-hover align-middle mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th style="width: 80px;">Resim</th>
                                        <th>Ürün Adı</th>
                                        <th>Fiyat</th>
                                        <th class="text-end pe-4">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var item in Model.UserProducts)
                                    {
                                        <tr>
                                            <td>
                                                @if (!string.IsNullOrEmpty(item.ImagePath))
                                                {
                                                    <img src="/products/@item.ImagePath" class="rounded" width="50" height="50" style="object-fit: cover;">
                                                }
                                                else
                                                {
                                                    <span class="badge bg-secondary">Yok</span>
                                                }
                                            </td>
                                            <td>
                                                <span class="d-block fw-bold">@item.Name</span>
                                                <small class="text-muted">@item.Category?.Name</small>
                                            </td>
                                            <td class="text-success fw-bold">@item.Price.ToString("C2")</td>
                                            <td class="text-end">
                                                <a asp-controller="Product" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-warning me-1">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a asp-controller="Product" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>