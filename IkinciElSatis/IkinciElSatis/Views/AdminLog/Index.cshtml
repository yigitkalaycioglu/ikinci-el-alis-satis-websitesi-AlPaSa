@model IEnumerable<IkinciElSatis.Models.AdminLog>
@{
    ViewData["Title"] = "İşlem Kayıtları (Loglar)";
}

<div class="container mt-4">
    <h3><i class="bi bi-journal-text"></i> Yönetici İşlem Kayıtları</h3>
    <p class="text-muted">Sistemde yapılan son 100 işlem aşağıda listelenmiştir.</p>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-striped table-hover mb-0 font-monospace" style="font-size: 0.9rem;">
                <thead class="table-dark">
                    <tr>
                        <th>Tarih</th>
                        <th>Yönetici</th>
                        <th>İşlem</th>
                        <th>Açıklama</th>
                        <th>IP Adresi</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var log in Model)
                    {
                        <tr>
                            <td>@log.Date.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (log.Admin != null)
                                {
                                    <span class="badge bg-primary">@log.Admin.FirstName @log.Admin.LastName</span>
                                }
                                else
                                {
                                    <span class="text-muted">Bilinmiyor</span>
                                }
                            </td>
                            <td class="fw-bold text-danger">@log.Action</td>
                            <td>@log.Description</td>
                            <td>@log.IpAddress</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>