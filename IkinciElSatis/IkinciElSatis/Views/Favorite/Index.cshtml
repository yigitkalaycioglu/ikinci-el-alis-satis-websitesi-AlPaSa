@model IEnumerable<IkinciElSatis.Models.FavoriteItem>

@{
    ViewData["Title"] = "Favorilerim";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4 border-bottom pb-2">
        <h2><i class="bi bi-heart-fill text-danger"></i> Favorilerim</h2>
        <a asp-controller="Product" asp-action="Index" class="btn btn-outline-primary btn-sm">
            <i class="bi bi-arrow-left"></i> Alışverişe Devam Et
        </a>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center p-5">
            <i class="bi bi-heart-break display-4 mb-3"></i>
            <p class="fs-5">Henüz favori ürününüz yok.</p>
            <a asp-controller="Product" asp-action="Index" class="btn btn-primary mt-2">Vitrini Gezmeye Başla</a>
        </div>
    }
    else
    {
        <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 row-cols-lg-4 g-4">
            @foreach (var item in Model)
            {
                <div class="col">
                    <div class="card h-100 shadow-sm border-0">
                        <div style="height: 200px; overflow: hidden; position: relative;">
                            <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId">
                                @if (!string.IsNullOrEmpty(item.Product?.ImagePath))
                                {
                                    <img src="/products/@item.Product.ImagePath" class="card-img-top w-100 h-100" style="object-fit: cover;">
                                }
                                else
                                {
                                    <div class="w-100 h-100 bg-light d-flex align-items-center justify-content-center text-muted">
                                        <i class="bi bi-camera-fill fs-1"></i>
                                    </div>
                                }
                            </a>
                        </div>

                        <div class="card-body">
                            <h5 class="card-title text-truncate">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="text-decoration-none text-dark">
                                    @item.Product?.Name
                                </a>
                            </h5>
                            <p class="card-text text-primary fw-bold fs-5">
                                @(item.Product?.Price.ToString("C0"))
                            </p>

                            <div class="d-grid gap-2 mt-3">
                                <a asp-controller="Product" asp-action="Details" asp-route-id="@item.ProductId" class="btn btn-sm btn-primary">
                                    <i class="bi bi-eye"></i> İncele
                                </a>

                                <form asp-action="Remove" asp-route-id="@item.Id" method="post">
                                    <button type="submit" class="btn btn-sm btn-outline-danger w-100" onclick="return confirm('Favorilerden kaldırmak istediğinize emin misiniz?')">
                                        <i class="bi bi-trash"></i> Kaldır
                                    </button>
                                </form>
                            </div>
                        </div>
                        <div class="card-footer bg-white text-muted small text-center">
                            Eklendi: @item.CreatedDate.ToString("dd.MM.yyyy")
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>