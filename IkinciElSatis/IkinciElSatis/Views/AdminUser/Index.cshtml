@model List<IkinciElSatis.ViewModels.AdminUserViewModel>

@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2><i class="bi bi-people-fill"></i> Üye Yönetimi</h2>
        <a asp-controller="Admin" asp-action="Index" class="btn btn-outline-secondary btn-sm">Panale Dön</a>
    </div>

    @if (TempData["Success"] != null)
    {
        <div class="alert alert-success">@TempData["Success"]</div>
    }
    @if (TempData["Error"] != null)
    {
        <div class="alert alert-danger">@TempData["Error"]</div>
    }

    <div class="row mb-4">
        <div class="col-md-6">
            <form asp-action="Index" method="get">
                <div class="input-group">
                    <input type="text" name="search" class="form-control" placeholder="Ad, Soyad veya Email ile ara..." value="@ViewData["CurrentFilter"]">
                    <button class="btn btn-primary" type="submit">Ara</button>
                    @if (ViewData["CurrentFilter"] != null)
                    {
                        <a asp-action="Index" class="btn btn-outline-secondary">Temizle</a>
                    }
                </div>
            </form>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-light">
                    <tr>
                        <th>Ad Soyad</th>
                        <th>Email</th>
                        <th>Rol</th>
                        <th class="text-end pe-4">İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var user in Model)
                    {
                        <tr>
                            <td class="fw-bold">@user.FirstName @user.LastName</td>
                            <td>@user.Email</td>
                            <td>
                                @if (user.Role == "Admin")
                                {
                                    <span class="badge bg-danger">Yönetici</span>
                                }
                                else
                                {
                                    <span class="badge bg-secondary">Kullanıcı</span>
                                }
                            </td>
                            <td class="text-end">
                                <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-sm btn-warning me-1" title="Düzenle">
                                    <i class="bi bi-pencil-fill"></i>
                                </a>

                                <form asp-action="Delete" asp-route-id="@user.Id" method="post" class="d-inline" onsubmit="return confirm('Bu kullanıcıyı ve tüm verilerini (ilanlar, mesajlar) silmek istediğinize emin misiniz? Bu işlem geri alınamaz!');">
                                    <button type="submit" class="btn btn-sm btn-danger" title="Sil">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>