@model IkinciElSatis.Models.Message

@{
    ViewData["Title"] = "Mesaj Oku";
}

<div class="container mt-5">
    <div class="card">
        <div class="card-header">
            Konu: @Model.RelatedProductName
        </div>
        <div class="card-body">
            <h5 class="card-title">Gönderen: @(Model.Sender?.FirstName ?? "Bilinmiyor") @(Model.Sender?.LastName)</h5>
            <h6 class="card-subtitle mb-2 text-muted">@Model.SentDate.ToString("f")</h6>
            <hr />
            <p class="card-text fs-5">@Model.Content</p>

            <a asp-action="Index" class="btn btn-secondary mt-3">Geri Dön</a>

            <a asp-action="Send"
               asp-route-receiverId="@Model.SenderId"
               asp-route-relatedProductName="Re: @Model.RelatedProductName"
               class="btn btn-primary mt-3">
                <i class="bi bi-reply"></i> Cevapla
            </a>
        </div>
    </div>
</div>