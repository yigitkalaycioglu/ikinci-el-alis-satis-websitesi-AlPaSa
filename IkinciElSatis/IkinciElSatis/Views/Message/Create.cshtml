@model IkinciElSatis.Models.Message

@{
    ViewData["Title"] = "Mesaj Gönder";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm border-0">
                <div class="card-header bg-primary text-white py-3">
                    <h5 class="mb-0"><i class="bi bi-chat-dots-fill me-2"></i>Mesaj Gönder</h5>
                </div>
                <div class="card-body p-4">

                    <div class="d-flex align-items-center mb-3">
                        <div class="bg-light rounded-circle d-flex align-items-center justify-content-center me-3" style="width: 50px; height: 50px;">
                            <i class="bi bi-person-fill fs-3 text-secondary"></i>
                        </div>
                        <div>
                            <small class="text-muted d-block">Alıcı</small>
                            <h6 class="fw-bold mb-0">@ViewBag.ReceiverName</h6>
                        </div>
                    </div>

                    @if (!string.IsNullOrEmpty(Model.RelatedProductName))
                    {
                        <div class="alert alert-warning border-0 d-flex align-items-center mb-4 shadow-sm">
                            <i class="bi bi-tag-fill me-3 fs-3 text-warning-emphasis"></i>
                            <div>
                                <small class="d-block text-uppercase fw-bold text-warning-emphasis" style="font-size: 0.75rem; letter-spacing: 1px;">Konu</small>
                                <span class="fs-5 fw-bold text-dark">@Model.RelatedProductName</span>
                            </div>
                        </div>
                    }

                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="ReceiverId" />
                        <input type="hidden" asp-for="RelatedProductName" /> <div class="mb-3">
                            <label asp-for="Content" class="form-label fw-bold">Mesajınız</label>
                            <textarea asp-for="Content" class="form-control" rows="5" placeholder="Merhaba, ürün hala satılık mı?"></textarea>
                            <span asp-validation-for="Content" class="text-danger"></span>
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-success btn-lg">
                                <i class="bi bi-send-fill me-2"></i>Gönder
                            </button>
                            <a href="javascript:history.back()" class="btn btn-outline-secondary">İptal</a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>